@model dynamic
@{
    if (Current.IsAjaxRequest()) { Layout = null; }
}
<!DOCTYPE html>
<html data-ng-app="App">
<head id="header">
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <link rel="shortcut icon" href="/favicon.ico" />

    <environment names="Development">
        <link rel="stylesheet" href="~@Current.AssetsUrl/js/bootstrap/dist/css/bootstrap.css" />
        <link href="~@Current.AssetsUrl/js/jquery-ui/themes/smoothness/jquery-ui.css" rel="stylesheet"/>
        <link rel="stylesheet" href="~/apps/common/robonom.css" />
    </environment>

    <environment names="Production">
        <link rel="stylesheet" href="~@Current.AssetsUrl/js/bootstrap/dist/css/bootstrap.css" />
        <link href="~@Current.AssetsUrl/js/jquery-ui/themes/smoothness/jquery-ui.css" rel="stylesheet" />
    </environment>

    <link href="~@Current.AssetsUrl/js/angular-ui-grid/ui-grid.min.css" rel="stylesheet" />
    <link href="~@Current.AssetsUrl/js/angular-toastr/dist/angular-toastr.min.css" rel="stylesheet" />

    <script type="text/javascript">
        var settings = {
            Name: "@Current.AppName",
            AssetsUrl: "@Current.AssetsUrl",
            DefaultLanguage: "@Current.DefaultLanguage"
        };
    </script>



    <title>@ViewData["Title"]</title>
</head>
<body id="body" ng-controller="LayoutController">
    <div ng-spinner-bar class="page-spinner-bar">
        <div class="bounce1"></div>
        <div class="bounce2"></div>
        <div class="bounce3"></div>
    </div>
    <div class="container body-content">
        <div ui-view class="fade-in-up" id="ui-view">
            @RenderBody()
        </div>
    </div>

    <environment names="Development">
        <!--#region LIB-->
        <script src="~@Current.AssetsUrl/js/jquery/dist/jquery.js"></script>
        <script src="~@Current.AssetsUrl/js/jquery-ui/jquery-ui.min.js"></script>
        <script src="~@Current.AssetsUrl/js/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~@Current.AssetsUrl/js/angular/angular.js"></script>
        <script src="~@Current.AssetsUrl/js/angular-ui/build/angular-ui.js"></script>
        <script src="~@Current.AssetsUrl/js/angular-sanitize/angular-sanitize.js"></script>
        <script src="~@Current.AssetsUrl/js/angular-touch/angular-touch.js"></script>
        <script src="~@Current.AssetsUrl/js/angular-ui-router/release/angular-ui-router.js"></script>
        <script src="~@Current.AssetsUrl/js/oclazyload/dist/oclazyload.js"></script>
        <script src="~@Current.AssetsUrl/js/angular-ui-bootstrap-complete/ui-bootstrap-tpls.js"></script>
        <script src="~@Current.AssetsUrl/js/angular-ui-grid/ui-grid.min.js"></script>
        <script src="~@Current.AssetsUrl/js/angular-toastr/dist/angular-toastr.tpls.js"></script>
        <!--#endregion LIB-->
        <!--#region JS-->
        <script src="~/apps/common/app.js" asp-append-version="true"></script>
        <script src="~/apps/common/routing.js" asp-append-version="true"></script>
        <script src="~/apps/common/roboutils.js" asp-append-version="true"></script>
        <script src="~/apps/common/layoutcontroller.js" asp-append-version="true"></script>
        <!--#endregion JS-->
    </environment>

    <environment names="Production">
        <!--#region LIB-->
        <link href="~@Current.AssetsUrl/js/jquery-ui/themes/smoothness/jquery-ui.css" rel="stylesheet" />
        <link href="~@Current.AssetsUrl/js/angular-ui-grid/ui-grid.min.css" rel="stylesheet" />

        <link href="~@Current.AssetsUrl/js/angular-ui-grid/ui-grid.min.css" rel="stylesheet" />
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.1.4.min.js"
                asp-fallback-src="~@Current.AssetsUrl/js/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/bootstrap.min.js"
                asp-fallback-src="~@Current.AssetsUrl/js/bootstrap/dist@Current.AssetsUrl/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"
                asp-fallback-src="~@Current.AssetsUrl/js/angular/angular.min.js"
                asp-fallback-test="window.angular"></script>

        <!--#endregion LIB-->
        <!--#region USIS CSS-->
        <link rel="stylesheet" href="~/css/usis.min.css" asp-append-version="true" />
        <!--#endregion USIS CSS-->
        <!--#region USIS JS-->
        <!--#endregion USIS JS-->
    </environment>

</body>
</html>
